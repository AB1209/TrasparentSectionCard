<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trees"
    tools:context=".activities.MainActivity">

    <com.ab1209.transparentsectioncard.views.TransparentCardView
        android:id="@+id/activity_main_transparent_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardColor="@color/yellow"
        app:cardHeight="750"
        app:cardRadiusInner="50"
        app:cardRadiusOuter="80"
        app:cardTopMargin="40"
        app:cardWidth="350"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>